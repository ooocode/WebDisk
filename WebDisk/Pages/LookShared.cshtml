@page "{Id}"
@model WebDisk.LookSharedModel
@{
    ViewData["Title"] = "共享文件";
}
@inject FileSharedService FileSharedService
@{

    GetSharedFileViewModel viewModel = new GetSharedFileViewModel
    {
        SharedId = Model.Id
    };


    <div class="card">
        <div class="card-header">
            请输入提取码
        </div>

        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <input type="hidden" asp-for="@viewModel.SharedId" />
                    <span asp-validation-for="@viewModel.SharedId"></span>
                </div>
              
                <div class="form-group">
                    <label asp-for="@viewModel.Code" class="col-form-label"></label>
                    <input type="text" class="form-control" asp-for="@viewModel.Code" />
                    <span asp-validation-for="@viewModel.Code"></span>
                </div>
               
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="提取文件" />
                </div>
            </form>
        </div>
    </div>

    @section Scripts{
    }
}
